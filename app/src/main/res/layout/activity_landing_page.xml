<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome To Bird Sighting App"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Add a Bird"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="127dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextEnterName"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_weight="0.50"
                    android:ems="10"
                    android:hint="Enter Bird Name"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/editTextEnterZip"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_weight="0.50"
                    android:ems="10"
                    android:hint="Enter Zip Code"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextEnterDate"
                    android:layout_width="match_parent"
                    android:layout_height="102dp"
                    android:layout_weight="0.25"
                    android:ems="9"
                    android:hint="Enter Date"
                    android:inputType="textPersonName" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:text="Add A Bird Sighting" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Search A Bird By Zip"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/editTextSearchBird"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Zip for Search a Bird"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:text="Search A Bird " />

        <Button
            android:id="@+id/buttonImportance"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Add Importance" />

        <TextView
            android:id="@+id/textViewLastBird"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Last Bird sighted: "
            tools:layout_height="wrap_content"
            android:layout_height="24dp" />

    </LinearLayout>

</LinearLayout>